<%= form_with(model: ticker_pair, class: "contents") do |form| %>
  <% if ticker_pair.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(ticker_pair.errors.count, "error") %> prohibited this ticker_pair from being saved:</h2>

      <ul>
        <% ticker_pair.errors.each do |error| %>
          <li><%= error.full_message %></li>
